generator client {
  provider = "prisma-client-js"
   binaryTargets = ["native", "windows"]
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}
model Pizza {
  id_pizza        Int              @id @default(autoincrement())
  name            String
  top_quantity    Int
  description     String?
  image           String?
  pizzaPrice      PizzaPrice[]
  toppingsOnPizza ToppingOnPizza[]
 
}

model Size {
  id_size       Int            @id @default(autoincrement())
  p_size        String
  price_topping Float
  basePrice     BasePrice[]
  pizzaPrice    PizzaPrice[]
  toppings      ToppingPrice[] @relation("ToppingPriceSize")
}

model PizzaPrice {
  id       Int   @id @default(autoincrement())
  id_size  Int
  id_pizza Int
  price    Float
  size     Size  @relation(fields: [id_size], references: [id_size])
  pizza    Pizza @relation(fields: [id_pizza], references: [id_pizza])
}

model Base {
  id_base        Int         @id @default(autoincrement())
  name           String
  increase_price Int
  basePrice      BasePrice[]
}

// This is price of pizza base for example 
// Stuff crust has differnt price on each size

model BasePrice {
  id         Int   @id @default(autoincrement())
  id_size    Int
  id_base    Int
  price_base Float
  size       Size  @relation(fields: [id_size], references: [id_size])
  base       Base  @relation(fields: [id_base], references: [id_base])
}

model ToppingPrice {
  id            Int   @id @default(autoincrement())
  id_topping    Int
  id_size       Int
  price_topping Float?
  size          Size  @relation("ToppingPriceSize", fields: [id_size], references: [id_size])
  topping       Toppings @relation(fields: [id_topping], references: [id])
}


model ToppingOnPizza {
  id          Int      @id @default(autoincrement())
  id_pizza    Int
  idf_topping Int
  pizza       Pizza    @relation(fields: [id_pizza], references: [id_pizza])
  topping     Toppings? @relation(fields: [idf_topping], references: [id])
}

model Toppings {
  id     Int              @id @default(autoincrement())
  name   String
  pizzas ToppingOnPizza[]
  toppingPrice    ToppingPrice[]
}
 
// schema.prisma
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  addresses Address[]
  orders    Order[]
}

model Address {
  id          Int      @id @default(autoincrement())
  address1    String
  address2    String
  city        String
  state       String?
  postalCode  String
  country     String
  phoneNumber String
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  orders      Order[]
}
// Define the Order model
model Order {
  id           Int        @id @default(autoincrement())
  userId       Int
  user         User       @relation(fields: [userId], references: [id])
  addressId    Int
  address      Address    @relation(fields: [addressId], references: [id])
  paymentType  String     // Example: cash, card, etc.
  status       String     // Example: pending, confirmed, delivered, etc.
  totalAmount  Float
  createdAt    DateTime   @default(now())
  // Define the relationship with order items
  items        OrderItem[]
}

// Define the OrderItem model
model OrderItem {
  id           Int       @id @default(autoincrement())
  orderId      Int
  order        Order     @relation(fields: [orderId], references: [id])
  productId    Int       // Assuming productId references some Product model
  quantity     Int
  price        Float
  toppings     String[]  // Example: Array of strings for toppings names
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  productName  String    // Add product name her
}

